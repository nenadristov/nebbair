@model IEnumerable<NebbAir.Models.Patnici>

@{
    ViewData["Title"] = "Index";
}

<h3>Booked Fligts Manifest</h3>


<table class="table" style="overflow-x:auto;">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Last Name
            </th>

            <th>
                Passport No.
            </th>
            <th>
                Flight No.
            </th>
            <th>
                Origin
            </th>
            <th>
                Destination
            </th>
            <th>
                Departure
            </th>
            <th>
                Return
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prezime)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.PassporNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Origin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destination)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departure)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Return)
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.PatnikID">View Full Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>